<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.namboodiri.illam.ResultsActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">
            <TextView
                android:id="@+id/name_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="16sp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                card_view:cardCornerRadius="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card1"
                android:focusable="auto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile" />
                        <TextView
                            android:id="@+id/name"
                            android:text="ERROR! NOT FOUND."
                            android:singleLine="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="20dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/father_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Father"
                android:onClick="clicked"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="16sp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                card_view:cardCornerRadius="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="clicked"
                android:id="@+id/card2"
                android:focusable="auto"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile" />
                        <TextView
                            android:id="@+id/father"
                            android:layout_width="wrap_content"
                            android:singleLine="false"
                            android:text="ERROR! NOT FOUND."
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="20dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/mother_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mother"
                android:onClick="clicked"
                android:layout_marginLeft="5dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="16sp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                card_view:cardCornerRadius="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="clicked"
                android:id="@+id/card3"
                android:focusable="auto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile" />
                        <TextView
                            android:id="@+id/mother"
                            android:text="ERROR! NOT FOUND."
                            android:layout_width="wrap_content"
                            android:singleLine="false"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="20dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/spouse_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spouse(s)"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="16sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_spouse"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <TextView
                    android:id="@+id/child_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Children"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="16sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_child"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
